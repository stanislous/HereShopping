@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ShoppingBOL.Customer

@{
    ViewData["Title"] = "Create";
}

<h2>Create a Customer</h2>

<div>
    <form asp-controller="Customer", asp-action="Create" method="post">
